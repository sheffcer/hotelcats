  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^6.7.7",
    "browser-sync": "^2.26.7",
    "cheerio": "^0.22.0",
    "cross-env": "^4.0.0",
    "css-mqpacker": "^5.0.1",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-cheerio": "^0.6.2",
    "gulp-csso": "^3.0.0",
    "gulp-gh-pages": "^0.5.4",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.4.0",
    "gulp-plumber": "1.1.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-svgmin": "^2.2.0",
    "gulp-svgstore": "^6.1.0",
    "run-sequence": "^1.2.2",
    "stylelint": "^9.10.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sheffcer/hotelcats.git "
  },
  "scripts": {
    "test": "editorconfig-cli",
    "build": "gulp build && gulp normalize",
    "start": "npm run build && gulp serve",
    "test:js": "eslint /blocks/**/*.js /js/**/*.js",
    "test:style": "stylelint \"sass/**/*.scss\" --syntax=scss"
  },
  "editorconfig-cli": [
    "*.html",
    "*.json",
    "*.js",
    "js/**/*.js",
    "img/**/*.svg",
    "sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "6.10"
